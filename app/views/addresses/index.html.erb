<p id="notice"><%= notice %></p>

<h1>Addresses</h1>

<table class="table">
  <thead>
    <tr>
      <th>Id</th>
      <th>Street</th>
      <th>District</th>
      <th>City</th>
      <th>State</th>
      <th>Zip code</th>
      <th>Inscription</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @addresses.each do |address| %>
    <tr>
      <td><%= address.id %></td>
      <td><%= address.street %></td>
      <td><%= address.district %></td>
      <td><%= address.city %></td>
      <td><%= address.state %></td>
      <td><%= address.zip_code %></td>
      <td><%= address.inscription_id %></td>
      <td><%= link_to 'Show', address %></td>
      <td><%= link_to 'Edit', edit_address_path(address) %></td>
      <td><%= link_to 'Destroy', address, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Address', new_address_path %>
